                        <KeyboardAccelerator Key="XButton1" IsEnabled="{x:Bind AreKeyboardAcceleratorsEnabled, Mode=OneWay}" />
                        <KeyboardAccelerator Key="Back" IsEnabled="{x:Bind AreKeyboardAcceleratorsEnabled, Mode=OneWay}" />
                        <KeyboardAccelerator
                            Key="Left"
                            IsEnabled="{x:Bind AreKeyboardAcceleratorsEnabled, Mode=OneWay}"
