                        <KeyboardAccelerator Key="F5" IsEnabled="{x:Bind AreKeyboardAcceleratorsEnabled, Mode=OneWay}" />
                    </Button.KeyboardAccelerators>
                </Button>
            </StackPanel>

            <AutoSuggestBox
                x:Name="VisiblePath"
                x:Uid="NavigationToolbarVisiblePath"
